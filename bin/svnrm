#!/bin/sh

# SVN remove file helper script
#
# 1. Given one arguements, source 
# 4. svn rm source
# 5. svn ci source
#
# @author Michael Cannon <michael@typo3vagabond.com>

# have an arguement
if [ ! "$1" ]
then
	echo "Usage: `basename $0` [source]"
	echo "Used to delete and remove a file from SVN"
	exit 65
fi

# boolean helpers
TRUE=1
FALSE=0

# original name
# remove /
DEBUG=$FALSE

# debug or go
if [ "$FALSE" -eq "$DEBUG" ]
then
	svn rm ${@}
	svn ci -m "Removal of \"${@}\"" ${@}

else
	echo svn rm ${@}
	echo svn ci -m \"Removal of \\\"${@}\\\"\" \"${@}\"
fi

exit 0
