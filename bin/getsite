#! /bin/sh

# Grab websites
#
# @author Michael Cannon <michael@peimic.com>
# @version $Id: getsite,v 1.2 2010/12/11 14:58:07 peimic.comprock Exp $

# have an arguement
if [ ! "$1" ]
then
	echo "Usage: `basename $0` url"
	echo "	Save url to local drive. Useful for mirroring website locally."
	exit 65
fi

# boolean helpers
TRUE=1
FALSE=0

# original name
URL=$1

wget --mirror \
	--page-requisites \
	--recursive \
	--convert-links \
	--cache=off \
	--user-agent=Mozilla \
	--domains= \
	${URL}
