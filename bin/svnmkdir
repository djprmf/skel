#!/bin/sh

# SVN mkdir file helper script
#
# 1. Given two arguements, source and destination
# 2. mkdir new-dir
# 3. svn add new-dir
# 4. svn ci new-dir
#
# @author Michael Cannon <michael@typo3vagabond.com>

# have two arguements?
if [[ ! ${1} ]]
then
	echo "Usage: `basename $0` new-directory"
	exit 65
fi

mkdir ${1}
svn add ${1}
svn ci -m "Mkdir ${1}"

exit 0
