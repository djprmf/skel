#!/bin/sh

# Convert carriage returns to line feeds
#
# @author Michael Cannon <michael@typo3vagabond.com>

# have an arguement
if [ ! "$1" ]
then
	echo 
	echo Convert file carriage returns to line feeds.
	echo "Usage: `basename $0` filename"
	echo 
	exit
fi

# perl -pi -e "s#\r\n?#\n#g" ${1}
# flip -u ${1}
perl -pi -e "s###g" ${1}